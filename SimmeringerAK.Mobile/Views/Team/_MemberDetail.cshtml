@model SimmeringerAK.Mobile.Models.Admin.TeamViewModel
@{
    this.Layout = null;
}

<div class="ui-grid-a ui-responsive">
    <div class="ui-block-a">
        <h2>@Model.Name</h2>
    </div>
    <div class="ui-block-a">
        <img src="@Model.ImagePath" />
    </div>
    <div class="ui-block-b">
        <div class="ui-grid-a">
            <div class="ui-block-a">
                <b>Rückennummer:</b>
            </div>
            <div class="ui-block-b">
                @Model.JerseyNumber
            </div>
            <div class="ui-block-a">
                <b>bevorzugte Position:</b>
            </div>
            <div class="ui-block-b">
                @Model.FavouritePosition
            </div>
            <div class="ui-block-a">
                <b>im Verein seit:</b>
            </div>
            <div class="ui-block-b">
                @Model.MemberSince
            </div>
            <div class="ui-block-a">
                <b>bisherige Vereine:</b>
            </div>
            <div class="ui-block-b">
                @Model.FormerTeams
            </div>
            <div class="ui-block-a">
                <b>Geburtsdatum:</b>
            </div>
            <div class="ui-block-b">
                @Model.BirthDate
            </div>
            <div class="ui-block-a">
                <b>Geburtsort:</b>
            </div>
            <div class="ui-block-b">
                @Model.BirthPlace
            </div>
            <div class="ui-block-a">
                <b>Größe:</b>
            </div>
            <div class="ui-block-b">
                @Model.Height
            </div>
            <div class="ui-block-a">
                <b>Gewicht:</b>
            </div>
            <div class="ui-block-b">
                @Model.Weight
            </div>
            <div class="ui-block-a">
                <b>Hobbies:</b>
            </div>
            <div class="ui-block-b">
                @Model.Hobbies
            </div>
            <div class="ui-block-a">
                <b>Lieblingsvereine:</b>
            </div>
            <div class="ui-block-b">
                @Model.FavouriteTeam
            </div>
            <div class="ui-block-a">
                <b>Lieblingsspieler:</b>
            </div>
            <div class="ui-block-b">
                @Model.FavouritePlayer
            </div>
        </div>
    </div>
</div>